---
// DownloadButton.astro
const { icon, name, color, link } = Astro.props;
---

<a href={link} class="app-button" style={`background-color: ${color};`}>
    <i>
        <svg viewBox="0 0 24 24" width="24" height="24">
            <use xlink:href={icon}></use>
        </svg>
    </i>
    {name}
</a>

<style>
    .app-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 20px;
        color: white;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        margin: 8px 0;
        transition: background-color 0.3s ease;
    }

    .app-button i {
        margin-right: 8px;
    }

    .app-button:hover,
    .app-button:focus {
        background-color: var(--button-hover-color);
    }
</style>
